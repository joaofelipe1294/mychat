<div class="container">



  <h2>Log in</h2>

  <div class="row">
    <div class="col s12">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="field">
        <div class="input-field">
          <%= f.email_field :email, class: "validate", autofocus: true %>
          <%= f.label "Email", for: "user_email" %>
        </div>
      </div>

      <div class="field">
        <div class="input-field">
          <%= f.password_field :password, class: "validate", autocomplete: 'current-password' %>
          <%= f.label "Password", for: "user_password" %>
        </div>
      </div>

      <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in", class: 'btn' %>
      </div>
      <% end %>

      <div style="margin-top: 2.5%;">
        <%= render "devise/shared/links" %>
      </div>
    </div>

  </div>

</div>
